<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="483.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.FXMLPrincipalController">
   <left>
      <VBox prefHeight="500.0" prefWidth="200.0" spacing="5" BorderPane.alignment="CENTER">
         <!-- Logo o título -->
         <Label alignment="CENTER" prefHeight="50" text="Facturación">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
         </Label>

         <!-- Botón principal Administración -->
         <Button fx:id="btnAdministracion" maxWidth="Infinity" onAction="#abrirSubMenuAdministracion" prefHeight="40" text="Administración" />

         <!-- Submenú Administración -->
         <VBox fx:id="subMenuAdmin" managed="false" spacing="5" visible="false">
             <Button fx:id="btnGestionClientes" maxWidth="Infinity" onAction="#accBtnGestionClientes" prefHeight="30" text="Gestión Clientes" />
             <Button fx:id="btnGestionUsuarios" maxWidth="Infinity" onAction="#accBtnGestionUsuarios" prefHeight="30" text="Gestión Usuarios" />
            <Button fx:id="btnGestionPerfiles" maxWidth="Infinity" onAction="#accBtnGestionPerfiles" prefHeight="30" text="Gestion Perfiles" />
            <Button fx:id="btnGestionEmpresas" maxWidth="Infinity" onAction="#accBtnEmpresas" prefHeight="30" text="Gestion Empresas" />
            <Button fx:id="btnGestionProductos" maxWidth="Infinity" onAction="#accBtnProductos" prefHeight="30" text="Gestion Productos" />

         </VBox>

         <!-- Botón principal Proceso -->
         <Button fx:id="btnProceso" maxWidth="Infinity" onAction="#abrirSubMenuProceso" prefHeight="40" text="Proceso" />

         <!-- Submenú Proceso -->
         <VBox fx:id="subMenuProceso" managed="false" spacing="5" style="-fx-padding: 0 0 0 15;" visible="false">
             <Button maxWidth="Infinity" onAction="#accBtnFactura" prefHeight="30" text="Facturas" />
             <Button maxWidth="Infinity" prefHeight="30" text="Pagos" />
         </VBox>

         <!-- Botón principal Reportes -->
         <Button fx:id="btnReportes" maxWidth="Infinity" onAction="#abrirSubMenuReportes" prefHeight="40" text="Reportes" />

         <!-- Submenú Reportes -->
         <VBox fx:id="subMenuReportes" managed="false" spacing="5" style="-fx-padding: 0 0 0 15;" visible="false">
             <Button maxWidth="Infinity" prefHeight="30" text="Reporte Clientes" />
             <Button maxWidth="Infinity" prefHeight="30" text="Reporte Ventas" />
         </VBox>

         <!-- Espaciador flexible -->
         <VBox prefHeight="200.0" prefWidth="100.0" />

         <!-- Información de usuario -->
         <VBox prefHeight="85.0" prefWidth="180.0" spacing="5">
            <HBox spacing="5">
                <Label text="Nombre:" />
                <Label fx:id="lblNombreUsuario" text="Usuario" />
            </HBox>
            <HBox spacing="5">
                <Label text="Cargo:" />
                <Label fx:id="lblRolUsuario" text="RolUsuario" />
            </HBox>
            <HBox spacing="5">
                <Label text="Fecha:" />
                <Label fx:id="lblFecha" text="Fecha" />
            </HBox>
         </VBox>

      </VBox>
   </left>

   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="dataPane" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
